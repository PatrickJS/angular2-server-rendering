{
  "version": "1.5.0",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "sourceMap": false,
    "listFiles": false,
    "outDir": "dist"
  },
  "files": [
    "node_modules/typescript/bin/lib.es6.d.ts",
    "typings/tsd.d.ts",
    "typings/_custom/server.d.ts",
    "typings/_custom/ng2.d.ts",
    "src/app/app.ts",
    "src/app.client.ts",
    "src/app.server.ts",
    "src/ng2Engine/index.ts",
    "src/ng2Engine/helper.ts",
    "src/ng2Engine/ng2string.ts",
    "src/angular2_client/bootstrap.client.ts",
    "src/angular2_client/iso_dom_renderer.ts",
    "src/angular2_server/bootstrap.server.ts",
    "src/angular2_server/server_patch.ts",
    "src/angular2_server/index.ts",
    "src/angular2_examples/hello_world/index.ts",
    "src/angular2_examples/hello_world/index_dynamic.ts",
    "src/angular2_examples/hello_world/index_common.ts",
    "src/angular2_examples/key_events/index.ts",
    "src/angular2_examples/forms/index.ts",
    "src/angular2_examples/todo/index.ts",
    "src/angular2_examples/todo/services/TodoStore.ts",
    "src/angular2_examples/largetable/largetable.ts"
  ],
  "filesGlob": [
    "src/**/*.ts",
    "!./node_modules/**/*.ts"
  ],
   "formatCodeOptions": {
      "indentSize": 2,
      "tabSize": 2,
      "newLineCharacter": "\r\n",
      "convertTabsToSpaces": true,
      "insertSpaceAfterCommaDelimiter": true,
      "insertSpaceAfterSemicolonInForStatements": true,
      "insertSpaceBeforeAndAfterBinaryOperators": true,
      "insertSpaceAfterKeywordsInControlFlowStatements": true,
      "insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
      "insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": false,
      "placeOpenBraceOnNewLineForFunctions": false,
      "placeOpenBraceOnNewLineForControlBlocks": false
    }
}
